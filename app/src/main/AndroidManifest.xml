<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.newsfeed">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"

        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.NewsFeed">
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".Entertainment"
            android:label="@string/action_entertainment">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.newsfeed.MainActivity" />
        </activity>
        <activity
            android:name=".Technology"
            android:label="@string/action_technology">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.newsfeed.MainActivity" />
        </activity>
        <activity
            android:name=".Science"
            android:label="@string/action_science">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.newsfeed.MainActivity" />
        </activity>
        <activity
            android:name=".Sports"
            android:label="@string/action_sports">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.newsfeed.MainActivity" />
        </activity>
        <activity
            android:name=".Business"
            android:label="@string/action_business">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.newsfeed.MainActivity" />
        </activity>
        <activity
            android:name=".health"
            android:label="@string/action_health">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.newsfeed.MainActivity" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:launchMode="singleTop">
          
        </activity>
    </application>

</manifest>